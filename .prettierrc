{
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "useTabs": false,
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-apex"
  ],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "**/*.cls",
      "options": {
        "parser": "apex",
        "apexStandaloneParser": "built-in",
        "apexInsertFinalNewline": true
      }
    }
  ]
}
